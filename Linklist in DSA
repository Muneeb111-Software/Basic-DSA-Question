#include<iostream>
using namespace std;
class Node{
public:
double data;
Node* next;
Node(double d){
	data = d;
	next= NULL;
}	
};
//traversing
void traverse(Node* head){
	Node* temp =head;
	while(temp!=NULL){
		cout<<temp->data<<"--";
		temp= temp->next;
	}
	cout<<"NULL"<<endl;
}
//insert at head
void insertAtHead(Node* &head, int d){
	Node* newNode = new Node(d);
	if(head==NULL){
		head = newNode;
		return  ;
	}
	newNode->next=head;
	head= newNode;
}
// at end
void insertAtEnd(Node* &head, int d){
	Node* newNode = new Node(d);
	if(head==NULL){
		head = newNode;
		return;
	}
   Node* last = head;
   while(last->next!=NULL){
   	last= last->next;
   }
   last->next = newNode;
}
// at specific pos
void InsertAtPos(Node* &head, int v,int pos){
Node* newNode= new Node(v);
if(head==NULL){
	head = newNode;
	return;
}
Node* prev = head;
int counter =1;
while(counter<(pos-1)){
	prev = prev->next;
	counter++;
}
newNode->next= prev->next;
prev->next = newNode;	
}
//delete at start
void deleteAtStart(Node* &head){
	Node* temp = head;
	head = head->next;
	delete temp;
}
void deleteAtEnd(Node* &head){
	Node* secondlastNode= head;
	while(secondlastNode->next->next!=NULL){
		secondlastNode= secondlastNode->next;
	}
	Node* lastNode= secondlastNode->next;
	secondlastNode->next= NULL;
	delete lastNode;
}
//dlt at pos
void deleteAtPos(Node* &head, int pos){
	Node* prev= head;
	if(head==NULL){
		return;
	}
	if(head->next==NULL){
		delete head;
		head =NULL;
		return ;
	}
	int counter =1;
	while(counter<(pos-1)){
		prev= prev->next;
		counter++;
	}
	Node* currentNode= prev->next;
	prev->next= currentNode->next;
	delete currentNode;
}
void counter(Node* head){
 int counter =0;
Node* temp = head;	
while(temp!=NULL){
	
	counter++;
	temp = temp->next;
}
cout<<"Total elemnts:"<<counter<<endl;
}
//searching
void searchNode(Node* &head, int key){
	Node* temp =head;
	bool found =false;
	while(temp!=NULL){
	if( temp->data==key){
		cout<<"Data found :"<<key<<endl;
		found =true;
		break;
	}
	temp= temp->next;
}
	if(!found){
		cout<<" No value found"<<endl;
	}
}
// reverseing
void reverse(Node* &head){
	Node* prev= NULL;
	Node* current = head;
	Node* next =NULL;
	while(current!=NULL){
		next = current->next;
		current->next= prev;
		prev= current;
		current = next;
	}
	head = prev;
}
// update
void updateNode(Node* head,int oldvalue, int newvalue){
Node* temp =head;
bool found = false;
while(temp!=NULL){
	if(temp->data==oldvalue){
		temp->data = newvalue;
		found =true;
		cout<<"Value update from :"<<oldvalue<<"to :"<<newvalue<<endl;
		break;
	}
	temp = temp->next;
}
if(!found){
	cout<<"Value not found"<<endl;
}	
}

int main(){
Node* n1 = new Node(12);
Node* n2 = new Node(13);	
n1->next = n2;
Node* head= n1;
traverse(head);
insertAtHead(head, 4);
traverse(head);
insertAtEnd(head,5);
traverse(head);
InsertAtPos(head, 20, 2);
traverse(head);
deleteAtStart(head);
traverse(head);
deleteAtEnd(head);
traverse(head);
deleteAtPos(head,3);
traverse(head);
counter(head);
searchNode(head,20);
updateNode(head,20,99);

}
